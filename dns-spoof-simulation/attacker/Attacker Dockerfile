FROM debian:bullseye-slim

ENV SPOOF_IP=6.6.6.6

RUN apt update && \
    apt install -y git python3 python3-pip net-tools iputils-ping tcpdump dnsutils dsniff bettercap && \
    git clone https://github.com/trimstray/huntkit /opt/huntkit && \
    chmod +x /opt/huntkit/*.sh

WORKDIR /opt/huntkit

COPY spoof.cap /opt/huntkit/spoof.cap

CMD ["/bin/bash", "-c", "bettercap -iface eth0 -caplet spoof.cap"]
